extends pug/base

block content
  // blur-box
  +b.SECTION.blur-box
    +e.outer
      +e.inner
        +e.header
          a.btn.btn_nav.btn_sm(href="#")
            span.btn__icon.icon.icon_arrow-left
            span.btn__text ВЕРНУТЬСЯ
        +e.content
          .logo
            img(src="images/logo.png", srcset="images/logo@2x.png", alt="")
          +b.FORM.form
            // form
            +e.input
                input.form__error(
                  type="tel"
                  name="phone"
                  placeholder="Номер телефона"
                  pattern="^(\\+7|8)?[\\s\\-]?[\\(\\)]?\\s?\\d{3}\\s?[\\(\\)]?[\\s\\-]?\\d{3}[\\s\\-]?\\d{2}[\\s\\-]?\\d{2}$"
                  maxlength="20"
                  minlength="9"
                  data-mask="+7 (___) ___ __-__"
                  required)
                span.icon
            +e.input
                input(
                  type="password"
                  name="password"
                  placeholder="Пароль"
                  minlength="5"
                  maxlength="50"
                  required
                )
                span.icon
            +e.group
              +e.checkbox.group__item
                  input#remember(type='checkbox' name='remember')
                  label(for="remember")
                    span Запомнить
              +e.input.group__item
                a(href="#") Забыл(a) пароль
            .group
              +e.button.group__item
                button.btn(type="submit") ВОЙТИ
          // END: form
  // END: blur-box
